{% extends 'base.html.twig' %}

{% block title %}Détails auteur{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Détails de l'auteur</h1>

    <ul class="list-group">
        <li class="list-group-item"><strong>ID:</strong> {{ author.id }}</li>
        <li class="list-group-item"><strong>Nom:</strong> {{ author.username }}</li>
        <li class="list-group-item"><strong>Email:</strong> {{ author.email ?: '-' }}</li>
    </ul>

    <div class="mt-3">
        <a class="btn btn-primary" href="{{ path('app_author_edit', {'id': author.id}) }}">Edit</a>
        <a class="btn btn-link" href="{{ path('app_author_index') }}">Retour</a>
    </div>
</div>

<div class="container mt-4">
    <h2>Livres publiés</h2>

    {% if books is not empty %}
        <ul class="list-group">
            {% for book in books %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>{{ book.title }}</strong>
                        <div class="text-muted">{{ book.publicationDate ? book.publicationDate|date('Y-m-d') : '-' }}</div>
                    </div>
                    <div>
                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_book_show', {'id': book.id}) }}">Voir</a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="text-muted">Aucun livre publié pour cet auteur.</p>
    {% endif %}
</div>
{% endblock %}
